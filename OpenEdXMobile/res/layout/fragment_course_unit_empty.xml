<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:gravity="center">

    <org.edx.mobile.view.custom.IconImageViewXml
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:iconColor="@color/neutralDark"
        app:iconName="fa-list"
        android:layout_margin="@dimen/widget_margin_double"/>

    <TextView
        android:text="@string/assessment_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:singleLine="false"
        android:textColor="@color/neutralXDark"
        android:textAlignment="center"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="@dimen/widget_margin"
        android:layout_marginBottom="@dimen/widget_margin" />

</LinearLayout>
